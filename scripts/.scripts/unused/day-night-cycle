#!/bin/bash
# export DBUS_SESSION_BUS_ADDRESS environment variable because cron hates me
PID=$(pgrep -o gnome-session -u "christopher")
export DBUS_SESSION_BUS_ADDRESS=$(sudo grep -z DBUS_SESSION_BUS_ADDRESS /proc/$PID/environ|cut -d= -f2-)
TIME="$(date '+%H%M')"
echo "The current time is $TIME"

CIVS="$(/home/christopher/bin/find-twilight | cut -f1 -d\ )"
CIVE="$(/home/christopher/bin/find-twilight | cut -f2 -d\ )"
echo "Daylight starts at $CIVS ends at $CIVE"
if [ $TIME -ge '0000' ] && [ $TIME -le '0500' ] ; then
	echo "Switching to Midnight mode"
	RESP=exec /home/christopher/bin/midnight-mode
elif [ $TIME -ge $CIVS ] && [ $TIME -le $CIVE ] ; then
	echo "Switching to Day mode"
	RESP=exec /home/christopher/bin/day-mode
else
	echo "Switching to Night mode"
	RESP=exec /home/christopher/bin/night-mode
fi

if [[ $RESP ]] ; then
	echo "Switch failure"
else
	echo "Switch sucess"
fi
